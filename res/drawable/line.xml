<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="line">
            <solid android:color="@android:color/white" />
            <stroke
                android:width="2dp"
                android:color="@color/white" /> <!-- Ganti dengan warna garis pinggir yang Anda inginkan saat tombol ditekan -->
        </shape>
    </item>
    <item>
        <shape android:shape="line">
            <solid android:color="@android:color/white" />
            <stroke
                android:width="2dp"
                android:color="@android:color/white" /> <!-- Ganti dengan warna garis pinggir yang Anda inginkan saat tombol tidak ditekan -->
        </shape>
    </item>
</selector>
